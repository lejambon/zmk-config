#!/bin/bash

set -euo pipefail

readonly board_default="nice_nano_v2"
readonly shield_default="cradio_left"

readonly zmk_config_dir="$(realpath $(dirname "${BASH_SOURCE[0]}")/..)"
readonly zmk_dir="$(realpath ${zmk_config_dir}/../zmk)"

usage() {
	echo "Usage: $(basename $0) <build|flash> <keyboard> [left|right]" >&2
	echo "       $(basename $0) <clean|update>" >&2
	exit 1
}

[[ $# -lt 1 ]] && usage

op="$1"
shift

if [[ ${op} == "build" ]] || [[ ${op} == "flash" ]]; then
	extra_build_args=()

	side="left"
	case "$#" in
		2)	side="$2" ;&
		1)	keyboard="$1" ;;
		*)	usage ;;
	esac

	[[ ${side} != "left" ]] && [[ ${side} != "right" ]] && usage

	case "${keyboard}" in
		choc)	name="Keyboard (Choc)"
				board="nice_nano_v2"
				shield="cradio_${side}"
				extra_build_args+=('-DDT_PREPROCESS_EXTRA_CPPFLAGS=-DKEYMAP_OS_MAC')
				;;
		mx)		name="Keyboard (MX)"
				board="nice_nano_v2"
				shield="cradio_${side}"
				;;
		*)		echo "Unknown keyboard ${keyboard}" >&2
				exit 2
				;;
	esac

	if [[ ${side} == "right" ]]; then
		extra_build_args+=("-DCONFIG_CLOCK_CONTROL_NRF_K32SRC_RC=y")
	fi

	build_dir="build/${keyboard}/${shield}"
fi

case "${op}" in
	build)
		cd "${zmk_dir}/app"
		west build \
			-b "${board}" \
			-d "${build_dir}" \
			-- \
			-DSHIELD="${shield}" \
			-DZMK_CONFIG="${zmk_config_dir}/config" \
			-DCONFIG_ZMK_KEYBOARD_NAME="\"${name}\"" \
			"${extra_build_args[@]}"
		;;
	flash)
		cd "${zmk_dir}/app"
		west flash -d "${build_dir}"
		;;
	clean)
		rm -Rf "${zmk_dir}/app/build"
		;;
	update)
		cd "${zmk_dir}"
		# TODO: SDK
		pipx upgrade west
		git pull
		west update
		;;
	*)
		usage
		;;
esac
